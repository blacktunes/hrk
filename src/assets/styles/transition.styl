.fade-enter-active, .fade-leave-active
  transition opacity 0.3s

.fade-enter-from, .fade-leave-to
  opacity 0

.fade-enter-to, .fade-leave-from
  opacity 1

@keyframes shake
  0%
    transform translate(0, 0)

  50%
    transform translate(0, 0)

  75%
    transform translate(0, -25%)

  100%
    transform translate(0, 0)

@keyframes progress
  from
    width 0%

  to
    width 80%